<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>RailsMisterCocktail</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body class="bg-dark text-light">
    <nav class="navbar navbar-expand-md sticky-top navbar-light bg-light">
      <%= link_to 'Mister Cocktail', root_path, class: 'navbar-brand' %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
      <div class="side-wrapper d-flex">
        <%= form_tag(search_path, method: "get", class: 'form-row') do %>
          <div class="input-group">
            <%= search_field_tag :search, params[:search], placeholder: "Search", class: "form-control bg-dark text-light" %>
            <div class="input-group-btn">
              <%= button_tag "Search", class: 'btn btn-primary btn-block' %>
            </div>
          </div>
        <% end %>
        <div class="flex-fill btn-group ml-3" role="group" aria-label="Button group with nested dropdown">
          <div class="flex-fill btn-group" role="group">
            <button id="btnGroupDrop1" type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Create New Cocktail </button>
            <div class="dropdown-menu dropdown-menu-right bg-primary" aria-labelledby="btnGroupDrop1" style="">
              <%= simple_form_for Cocktail.new, html: { class: 'px-2 py-1' } do |f| %>
                <%= f.input :name, label: false, placeholder: 'Cocktail Name', input_html: { class: 'bg-dark text-light' } %>
                <%= f.input :direction, as: :text, label: false, placeholder: 'Directions', input_html: { class: 'bg-dark text-light' } %>
                <%= f.input :photo, as: :file %>
                <%= f.button :submit, 'Create', class: 'btn btn-dark btn-block' %>
              <% end %>
            </div>
          </div>
        </div>
        </div>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
