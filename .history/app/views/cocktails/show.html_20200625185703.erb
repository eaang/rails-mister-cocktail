<div id="recipe" class="d-flex flex-wrap">
<div class="col-12 col-md-6 col-lg-4">

<div class="card mb-3">
  <h3 class="card-header"><%= @show_cocktail.name.split.map(&:capitalize)*' ' %></h3>
  <img style="height: 200px; width: 100%; display: block;" src="<%= @show_cocktail.picture %>" alt="<%= @show_cocktail.name %>">
  <div class="card-body">
    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">Cras justo odio</li>
    <li class="list-group-item">Dapibus ac facilisis in</li>
    <li class="list-group-item">Vestibulum at eros</li>
  </ul>
  <div class="card-body">
    <a href="#" class="card-link">Card link</a>
    <a href="#" class="card-link">Another link</a>
  </div>
  <div class="card-footer text-muted">
    2 days ago
  </div>
</div>
<div class="card">
  <div class="card-body">
    <h4 class="card-title">Card title</h4>
    <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>
    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
    <a href="#" class="card-link">Card link</a>
    <a href="#" class="card-link">Another link</a>
  </div>
</div>

<div id="drink" class="h-50" style="background-size: cover; background-image: linear-gradient(rgba(0,0,0,0.2), rgba(0,0,0,0.2)), url(<%= @show_cocktail.picture %>)">
  <h1></h1>
</div>
</div>
<div class="col-12 col-md-6 col-lg-4">
  <ul>
    <% @doses.each do |dose| %>
      <li>
        <%= "#{dose.description} #{dose.ingredient.name.split.map(&:capitalize)*' '}" %>
        <%= link_to '❌', dose_path(dose),
            data: {:confirm => 'Are you sure?'}, :method => :delete %>
      </li>
    <% end %>
  </ul>
</div>
<div class="col-12 col-lg-4">
  <h2>Add a dose</h2>
  <%= simple_form_for [@show_cocktail, @dose] do |f| %>
    <div class="form-row">
      <div class="col-sm-12 col-md-5">
        <%= f.input :description, label: false, placeholder: 'How much?' %>
      </div>
      <div class="col-sm-12 col-md-5">
        <%= f.association :ingredient, label: false, prompt: 'Choose ingredient' %>
      </div>
      <div class="col">
        <%= f.button :submit, 'Add', class: 'btn btn-primary btn-block' %>
      </div>
    </div>
  <% end %>
</div>
