<div class="container">
  <div class="col-12">
    <h1><%= @cocktail.name.split.map(&:capitalize)*' ' %></h1>
    <ul>
      <% @doses.each do |dose| %>
        <li>
          <%= "#{dose.description} #{dose.ingredient.name.split.map(&:capitalize)*' '}" %>
          <%= link_to '❌', dose_path(dose),
            data: {:confirm => 'Are you sure?'}, :method => :delete %>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="col-12">
    <h2>Add a dose</h2>
    <%= simple_form_for [@cocktail, @dose] do |f| %>
      <div class="form-row">
        <div class="col-5">
          <%= f.input :description, label:false, placeholder: 'How much to add?' %>
        </div>
        <div class="col-5">
          <%= f.association :ingredient, label:false, prompt: 'Choose an ingredient' %>
        </div>
        <div class="col-2">
          <%= f.button :submit, class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
