<div class="col">
  <div class="row mb-5 justify-content-center">
    <h1 class="text-light mb-0">Pick Your Poison</h1>
  </div>
  <div class="row">
    <div class="cards flex-fill">
      <% @cocktails.each do |cocktail| %>
        <%= link_to cocktail, class: 'text-light' do %>
          <%= cl_image_tag cocktail.photo.key, height: 300, width: 400, crop: :fill %>
            <div class="card-category">
            <%= cocktail.name.titleize %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
