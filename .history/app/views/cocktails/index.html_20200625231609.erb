<div class="col">
  <div class="row mb-5 justify-content-center">
    <h1 class="text-light mb-0">Pick Your Poison</h1>
  </div>
  <div class="row">
    <div class="cards flex-fill">
      <% @cocktails.each do |cocktail| %>
          <%= link_to image_tag(cocktail.picture), cocktail, class: 'card-category cocktail-pic'%>
      <% end %>
    </div>
  </div>
</div>
