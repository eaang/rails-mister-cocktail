<div class="container d-flex my-5 justify-content-center">
  <div class="col">
    <div class="row mb-5 justify-content-center text-center flex-column">
      <div>
        <h1 class="text-light">Search Results</h1>
      </div>
      <div>You searched for '<%= @input %>'.</div>
    </div>
    <% if @cocktails.empty? && @ingredients.empty? %>
    <div class="row">
      <h4 class="text-center">No results found!</h4>
    </div>
    <% else %>
      <div class="row">
        <h3 class="text-light">Cocktails Matching</h3>
      </div>
      <div class="row">
        <div class="cards flex-fill">
          <% @cocktails.each do |cocktail| %>
            <%= link_to cocktail, class: 'text-light' do %>
              <% if cocktail.photo.attached? %>
                <div class="cocktail-pic" style="background-image: url(<%= cl_image_path cocktail.photo.key %>)">
                <% else %>
                  <div class="cocktail-pic" style="background-image: url('https://i.imgur.com/cxWlXuH.jpg')">
                  <% end %>
                  <div class="card-category">
                    <%= cocktail.name.titleize %>
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
        <div class="row mt-5">
          <h3 class="text-light">Ingredients Matching</h3>
        </div>
        <div class="row">
          <div class="cards flex-fill">
            <% @ingredients.each do |cocktail| %>
              <%= link_to cocktail, class: 'text-light' do %>
                <% if cocktail.photo.attached? %>
                  <div class="cocktail-pic" style="background-image: url(<%= cl_image_path cocktail.photo.key %>)">
                  <% else %>
                    <div class="cocktail-pic" style="background-image: url('https://i.imgur.com/cxWlXuH.jpg')">
                    <% end %>
                    <div class="card-category">
                      <%= cocktail.name.titleize %>
                    </div>
                  </div>
                <% end %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
