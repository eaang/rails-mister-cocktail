<div class="col mb-5">
  <div class="row mb-5 justify-content-center">
    <h1 class="text-light">Pick Your Poison</h1>
  </div>
  <div class="row">
    <div class="cards flex-fill">
      <% @cocktails.each do |cocktail| %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)), url(<%= cocktail.picture %>)">
          <%= link_to cocktail.name.titleize, cocktail, class: 'text-light'%>
        </div>
      <% end %>
    </div>
  </div>
</div>
