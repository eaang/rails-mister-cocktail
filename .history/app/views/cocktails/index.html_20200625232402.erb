<div class="col">
  <div class="row mb-5 justify-content-center">
    <h1 class="text-light mb-0">Pick Your Poison</h1>
  </div>
  <div class="row">
    <div class="cards flex-fill">
      <% @cocktails.each do |cocktail| %>
        <%= link_to cocktail, class: 'text-light' do %>
          <div class="cocktail-pic" style="background-image: url(<%= cocktail.picture %>)">
            <div class="card-category">
            
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
