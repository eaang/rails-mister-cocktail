<div class="container">
  <div class="col-12">
    <h1><%= @cocktail.name.split.map(&:capitalize)*' ' %></h1>
    <ul>
      <% @doses.each do |dose| %>
        <li>
          <%= "#{dose.description} #{dose.ingredient.name.split.map(&:capitalize)*' '}" %>
          <%= link_to '❌', dose_path(dose),
            data: {:confirm => 'Are you sure?'}, :method => :delete %>
        </li>
      <% end %>
    </ul>
  </div>
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :rating, collection: 0..5, prompt: 'Rate the restaurant' %>
    <%= f.input :content, as: :text, placeholder: 'Write a short review here' %>
    <%= f.button :submit, class: 'btn btn-primary' %>
  <% end %>
</div>
