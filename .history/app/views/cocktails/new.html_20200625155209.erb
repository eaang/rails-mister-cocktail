<div class="container">
  <div class="col-12">
    <h1>New Cocktail</h1>
  </div>
  <div class="form-row col-12">
    <%= simple_form_for [@cocktail] do |f| %>
      <%= f.input :name, label:false, placeholder: 'What is your cocktail called?' %>
      <%= f.button :submit, class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
